<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:paddingEnd="20dp"
              android:paddingStart="20dp"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_bg_dialog_title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_dialog_function3_cancel"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            app:srcCompat="@drawable/ic_close_black_24dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/Healthhabits"
            android:textColor="#FFF"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_dialog_function3_ok"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/OK"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <TextView
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:text="@string/function3_hint"
        android:paddingTop="30dp"
        android:textSize="16dp"
        android:textColor="#666666"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_height="wrap_content"/>
<View
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_f3_move"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_f3_move"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/ic_move_d"/>

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tv_f3_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/move"
                android:textColor="@color/colorTextDialog"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_f3_water"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_f3_water"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/ic_water_d"/>

            <TextView

                android:id="@+id/tv_f3_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/water"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorTextDialog"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_f3_fruit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_f3_fruit"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/ic_fruit_d"/>

            <TextView
                android:id="@+id/tv_f3_fruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fruit"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorTextDialog"
                android:textSize="14dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_f3_defecation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="70dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_f3_defecation"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/ic_defecation_d"/>

            <TextView
                android:id="@+id/tv_f3_defecation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defecation"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorTextDialog"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@drawable/shape_bg_dialog_content"
        android:layout_height="17dp"/>

</LinearLayout>