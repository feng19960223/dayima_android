<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/ad_iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ad_bg_big"/>

        <ImageView
            android:id="@+id/ad_iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ad_cancel"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ad_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="AD"
            android:textColor="#333333"
            android:textSize="14dp"/>

        <LinearLayout
            android:id="@+id/ad_ll_Choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/ad_iv_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ad_bg_small"/>

    <TextView
        android:id="@+id/ad_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_weight="62"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ad_tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_weight="130"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="102"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/ad_tv_call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/ad_btn_round_splash"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:minWidth="208dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"/>
        <!--android:typeface设置字体-->
    </LinearLayout>
</LinearLayout>