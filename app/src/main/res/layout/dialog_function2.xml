<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_bg_dialog_title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_dialog_function2_cancel"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            app:srcCompat="@drawable/ic_close_black_24dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/Makeloverecord"
            android:textColor="#FFF"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_dialog_function2_ok"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/OK"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <com.taiqudong.android.enayeh.view.NumberPickerView
        android:id="@+id/npv_function2"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="@drawable/shape_bg_dialog_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        app:npv_ShowCount="5"
        app:npv_ShowDivider="false"
        app:npv_TextColorNormal="#8A000000"
        app:npv_TextColorSelected="#DE000000"
        app:npv_TextSizeNormal="16dp"
        app:npv_TextSizeSelected="22dp"/>

</LinearLayout>